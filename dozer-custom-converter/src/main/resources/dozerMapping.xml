<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net htpp://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<stop-on-errors>true</stop-on-errors>
		<custom-converters>
			<converter
				type="com.jitin.dozercustomconverter.util.CustomBooleanStringConverter">
				<class-a>java.lang.Boolean</class-a>
				<class-b>java.lang.String</class-b>
			</converter>
		</custom-converters>
	</configuration>

	<!-- Context Based Mapping -->
	<!-- http://dozer.sourceforge.net/documentation/contextmapping.html -->
	<mapping map-id="noAddress">
		<class-a>com.test.model.StudentBO</class-a>
		<class-b>com.test.dto.StudentDTO</class-b>
		<field-exclude type="one-way">
			<a>address</a>
			<b>address</b>
		</field-exclude>
	</mapping>
</mappings>
